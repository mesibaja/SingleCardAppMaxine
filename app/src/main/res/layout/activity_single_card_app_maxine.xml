<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/maxine1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:context="com.example.android.singlecardappmaxine.SingleCardAppMaxine">

        <!-- Logo -->

        <ImageView
            android:id="@+id/activity_main_imageview_maxinelogo"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:contentDescription="@string/Email"
            android:scaleType="centerCrop"
            android:src="@drawable/maxinelogo" />

        <!-- Paris Pic -->

        <ImageView
            android:id="@+id/activity_main_imageview_maxineparis"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:contentDescription="@string/Site"
            android:scaleType="centerCrop"
            android:src="@drawable/maxineparis" />

        <!-- Introduction -->

        <TextView
            android:id="@+id/activity_main_textview_maxine"
            style="@style/NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Maxine" />

        <!-- Horizontal Linear View -->

        <LinearLayout
            android:id="@+id/maxine3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@color/backgroundColor"
            android:orientation="horizontal"
            tools:context="com.example.android.singlecardappmaxine.SingleCardAppMaxine">

            <!-- Contact Button -->

            <TextView
                android:id="@+id/activity_main_textview_contact"
                style="@style/NormalText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="5dp"
                android:text="@string/Contact" />

            <!-- Adress Button -->

            <TextView
                android:id="@+id/activity_main_textview_adress"
                style="@style/NormalText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="5dp"
                android:text="@string/Adress" />

            <!-- Phone Button -->

            <ImageButton
                android:id="@+id/image_button_phone"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/Phone"
                android:onClick="CallNumber"
                android:src="@drawable/call" />

            <!-- Email Button -->

            <ImageButton
                android:id="@+id/image_button_email"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/Email"
                android:onClick="SendEmail"
                android:src="@drawable/emailweb" />

            <!-- Website Button -->

            <ImageButton
                android:id="@+id/image_button_website"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/Site"
                android:onClick="GoToWebsite"
                android:src="@drawable/httpweb" />

