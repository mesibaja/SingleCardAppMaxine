    tools:context="com.example.android.singlecardappmaxine.SingleCardAppMaxine">

    <LinearLayout
        android:id="@+id/activity_single_card_app_maxine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/activity_main_imageView_maxineparis"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/maxineparis" />

        <TextView
            android:id="@+id/activity_main_textView_Maxine"
            style="@style/NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Maxine" />

        <ImageView
            android:id="@+id/activity_main_imageView_maxinelogo"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_weight="1"
            android:contentDescription="@string/Future"
            android:scaleType="centerCrop"
            android:src="@drawable/maxinelogo" />

        <RelativeLayout
            android:id="@+id/activity_single_card_app_maxine1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/backgroundColor"
            android:padding="20dp" />

        <TextView
            android:id="@+id/activity_main_textView_Adress"
            style="@style/NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_main_textView_Maxine"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="@string/Adress" />

        <ImageButton
            android:id="@+id/ImageButtonPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_main_textView_Adress"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/Phone"
            android:onClick="call_number"
            android:src="@drawable/call" />

        <ImageButton
            android:id="@+id/ImageButtonEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_totheRight_of="@+id/ImageButtonPhone"
            android:contentDescription="@string/Email"
            android:onClick="send_email"
            android:src="@drawable/emailweb" />

        <ImageButton
            android:id="@+id/ImageButtonWebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ImageButtonEmail"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/Site"
            android:onClick="goto_website"
            android:src="@drawable/httpweb" />

