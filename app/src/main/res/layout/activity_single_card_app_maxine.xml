<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_maxine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:context="com.example.android.singlecardappmaxine.SingleCardAppMaxine">

    <ScrollView
        android:id="@+id/activity_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/activity_maxine2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Maxine Pic -->

            <ImageView
                android:id="@+id/activity_main_imageView_MaxineParis"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:contentDescription="@string/Picture"
                android:src="@drawable/maxine1" />

            <TextView
                android:id="@+id/activity_main_textView_Future"
                style="@style/NormalText"
                android:text="@string/Future" />

            <!-- Horizontal Linear View -->

            <LinearLayout
                android:id="@+id/maxine3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/backgroundColor"
                android:orientation="horizontal"
                tools:context="com.example.android.singlecardappmaxine.SingleCardAppMaxine">

                <!-- Calendar Button -->

                <Button
                    android:id="@+id/angry_btn_calendar"
                    style="@style/Button"
                    android:layout_weight="1"
                    android:layout_gravity="start"
                    android:onClick="OpenCalendar"
                    android:text="@string/Calendar" />

                <!-- Email Button -->

                <Button
                    android:id="@+id/angry_btn_email"
                    style="@style/Button"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:onClick="SendEmail"
                    android:text="@string/Email" />

                <!-- Website Button -->

                <Button
                    android:id="@+id/angry_btn_website"
                    style="@style/Button"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:onClick="GoToWebsite"
                    android:text="@string/Site" />

                <!-- Facebook Button -->

                <Button
                    android:id="@+id/angry_btn_facebook"
                    style="@style/Button"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:onClick="OpenFacebook"
                    android:text="@string/FB" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/activity_main_imageview_maxinelogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/Logo"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:src="@drawable/maxinelogo" />

</RelativeLayout>