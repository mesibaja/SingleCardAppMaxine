<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_maxine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:context="com.example.android.singlecardappmaxine.SingleCardAppMaxine">

    <ScrollView
        android:id="@+id/activity_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/activity_maxine2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Maxine Pic -->

            <ImageView
                android:id="@+id/activity_main_imageView_MaxineParis"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:contentDescription="@string/Picture"
                android:src="@drawable/maxine1" />

            <!-- Introduction -->

            <TextView
                android:id="@+id/activity_main_textView_Maxine"
                style="@style/Title"
                android:text="@string/Maxine" />

            <TextView
                android:id="@+id/activity_main_textView_Greater"
                style="@style/NormalText"
                android:text="@string/Greater" />

            <TextView
                android:id="@+id/activity_main_textView_Future"
                style="@style/NormalText"
                android:text="@string/Future" />

            <TextView
                android:id="@+id/activity_main_textView_Prior"
                style="@style/NormalText"
                android:text="@string/Prior" />

            <TextView
                android:id="@+id/activity_main_textView_Citizen"
                style="@style/NormalText"
                android:text="@string/Citizen" />

            <TextView
                android:id="@+id/activity_main_textView_Focus"
                style="@style/NormalText"
                android:text="@string/Focus" />

                <!-- Contact and Adress -->

                <TextView
                    android:id="@+id/activity_main_textview_contact"
                    style="@style/NormalText"
                    android:text="@string/Contact" />

            <!-- Horizontal Linear View -->

            <LinearLayout
                android:id="@+id/maxine3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/backgroundColor"
                android:orientation="horizontal"
                tools:context="com.example.android.singlecardappmaxine.SingleCardAppMaxine">

            <!-- Calendar Button -->

                <Button
                    android:id="@+id/angry_btn_calendar"
                    android:text="@string/Calendar"
                    android:onClick="OpenCalendar"
                    style="@style/Button"/>

                <!-- Email Button -->

                <Button
                    android:id="@+id/angry_btn_email"
                    android:text="@string/Email"
                    android:onClick="SendEmail"
                    style="@style/Button"/>

                <!-- Website Button -->

                <Button
                    android:id="@+id/angry_btn_website"
                    android:text="@string/Site"
                    android:onClick="GoToWebsite"
                    style="@style/Button" />

                    <Button
                        android:id="@+id/angry_btn_facebook"
                        android:text="@string/FB"
                        android:onClick="OpenFacebook"
                        style="@style/Button" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

    <ImageView
        android:id="@+id/activity_main_imageview_maxinelogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/Logo"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:src="@drawable/maxinelogo" />

</RelativeLayout>